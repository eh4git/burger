<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-4">
      <h1>Burgers!</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-5">
      <h2>Burgers Ready to be Eaten</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-5">
      <h2>Burgers that have been Devoured!</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-4">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>
        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Devoured!<br>
          <input type="radio" name="devoured" value="0"> Ready to be Devoured
        </div>
        <button type="submit" id="makeBurgerBtn">Add Burger</button>
      </form>
    </div>
  </div>
</div>